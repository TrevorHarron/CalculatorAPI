# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


#Math GET methods
GET     /ping                       controllers.Application.ping

GET     /math                       controllers.Math.home

#Math Post Functions
POST    /math/add                   controllers.Math.add
POST    /math/sub                   controllers.Math.sub
POST    /math/mul                   controllers.Math.mul
POST    /math/div                   controllers.Math.div
POST    /math/mod                   controllers.Math.mod
POST    /math/pwr                   controllers.Math.pwr

#Math GET functions
GET    /math/add                   controllers.Math.home
GET    /math/sub                   controllers.Math.home
GET    /math/mul                   controllers.Math.home
GET    /math/div                   controllers.Math.home
GET    /math/mod                   controllers.Math.home
GET    /math/pwr                   controllers.Math.home